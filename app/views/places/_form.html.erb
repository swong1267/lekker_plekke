<%= form_for @place do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

   <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :rating %><br>
    <%= f.select :rating, (0..10) %>
  </p>

  <p>
    <%= f.label :must_see %>
   	<%= f.check_box :must_see %> <br />
  </p>
 
  <p>
    <%= f.submit %>
  </p>

<% end %>